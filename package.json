{
  "name": "stagewise",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=@stagewise/*",
    "build:toolbar": "turbo run build:toolbar",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo watch dev",
    "dev:playgrounds": "turbo run dev:playgrounds",
    "dev:examples": "turbo run dev:examples",
    "changeset": "pnpm dlx @changesets/cli",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "sherif": "pnpm dlx sherif --fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "lefthook": "^1.11.11",
    "ts-node": "10.9.2",
    "turbo": "^2.5.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "biome": "^0.3.3"
  },
  "pnpm": {
    "patchedDependencies": {
      "@headlessui/react@2.2.2": "patches/@headlessui__react.patch"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
