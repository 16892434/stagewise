{
  "name": "@stagewise/react",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.umd.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "license": "AGPL-3.0-only",
  "scripts": {
    "clean": "rm -rf .turbo dist node_modules",
    "dev": "tsc -b && vite build --watch --mode development",
    "build": "tsc -b && vite build && npm run fix-types",
    "build:toolbar": "tsc -b && vite build && npm run fix-types",
    "fix-types": "echo 'import type { ToolbarConfig } from \"@stagewise/core\";\nexport type { ToolbarConfig };\nexport declare function StagewiseToolbar(props: { config: ToolbarConfig }): null;' > dist/index.d.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3",
    "@stagewise/core": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "@types/react": ">=18.0.0",
    "@stagewise/core": "workspace:*"
  }
}
