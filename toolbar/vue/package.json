{
  "name": "@stagewise/vue",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.umd.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "tsc -b && vite build --watch --mode development",
    "build": "tsc -b && vite build && npm run fix-types",
    "build:toolbar": "tsc -b && vite build && npm run fix-types",
    "fix-types": "echo 'import type { ToolbarConfig } from \"@stagewise/core\";\nexport type { ToolbarConfig };\nexport declare const StagewiseToolbar: any;' > dist/index.d.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "eslint": "^9.25.0",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3",
    "@stagewise/core": "workspace:*",
    "vue": "^3.4.31"
  },
  "peerDependencies": {
    "vue": ">=3.0.0",
    "@stagewise/core": "workspace:*"
  }
}
